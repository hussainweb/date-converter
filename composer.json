{
    "name": "hussainweb/date-converter",
    "description": "DateConverter is a PHP library to convert dates from and to various calendar systems.",
    "type": "library",
    "keywords": [
        "date",
        "hijri",
        "calendar"
    ],
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Hussain Abbas",
            "email": "hussainweb@gmail.com",
            "homepage": "http://hussainweb.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "Hussainweb\\DateConverter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hussainweb\\DateConverter\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
